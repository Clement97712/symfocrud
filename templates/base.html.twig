    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
    <link rel="stylesheet" href="/css/footer.css" /> {% endblock %}
</head>

<body>
    {%include('/inc/navbar.html.twig')%}
    <!--
    The text
-->
    <div class="container">
        <h2 class="sentence">Liste Livres</h2>
        {% for art in article %}
        <div class="container styles">
            <img src="{{art.img}}" />
            <p>{{art.nom}}</p>
            <p>{{art.prenom}}</p>
            <div class="message">
                <p>{{art.comment}}</p>
            </div>
            <div class="">
                <a href="/update/{{art.id}}" class="btn btn-primary">Update</a>
                <a href="/delete/{{art.id}}" class="btn btn-dark">Delete</a>
            </div>
        </div>
    </div>
    {%endfor%} {%include('/inc/footer.html.twig')%} {% block body %}{% endblock %} {% block javascripts %}{% endblock %}

</body>

</html>